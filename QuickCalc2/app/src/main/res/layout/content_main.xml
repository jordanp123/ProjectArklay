<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <TextView android:text="Main Menu" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:inputType="none" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simple Electrical"
        android:id="@+id/selectricalbutton"
        android:layout_below="@+id/textView"
        android:layout_alignParentEnd="true"
        android:onClick="open_simple_electrical"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simple Ventilation"
        android:id="@+id/sventilationbutton"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Per Unit"
        android:id="@+id/button"
        android:layout_below="@+id/selectricalbutton"
        android:layout_alignStart="@+id/selectricalbutton"
        android:layout_alignEnd="@+id/selectricalbutton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cable Calculator"
        android:id="@+id/button3"
        android:layout_below="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_alignEnd="@+id/button"
        android:onClick="open_Cable_Calculator"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Short Circuit"
        android:id="@+id/ShortCircuitButton"
        android:layout_below="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:layout_alignEnd="@+id/button3" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Power Factor"
        android:id="@+id/PowerFactorButton"
        android:layout_below="@+id/ShortCircuitButton"
        android:layout_alignStart="@+id/ShortCircuitButton"
        android:layout_alignEnd="@+id/ShortCircuitButton"
        android:onClick="open_Power_Factor"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Motors"
        android:id="@+id/MotorsButton"
        android:layout_below="@+id/PowerFactorButton"
        android:layout_alignStart="@+id/PowerFactorButton"
        android:layout_alignEnd="@+id/PowerFactorButton" />
</RelativeLayout>
